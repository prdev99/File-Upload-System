<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Your Uploaded Files</h1>
    <div class="d-flex gap-2">
      <%= link_to "Upload New File", new_file_upload_path, class: "btn btn-primary" %>
    </div>
  </div>

  <% if @file_uploads.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @file_uploads.each do |upload| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= upload.title %></h5>
              <p class="card-text text-muted"><%= upload.description.presence || "No description" %></p>

              <% if upload.file.attached? %>
                <p class="mb-1"><strong>Original File:</strong> 
                  <%= link_to upload.file.filename.to_s, url_for(upload.file), target: "_blank", rel: "noopener" %>
                </p>
              <% else %>
                <p class="text-danger"><strong>No file uploaded.</strong></p>
              <% end %>

              <% if upload.compressed_file.attached? %>
                <p class="mb-1"><strong>Compressed:</strong>
                  <%= link_to "Download ZIP", rails_blob_path(upload.compressed_file, disposition: "attachment"), class: "text-decoration-underline" %>
                </p>
              <% end %>

              <% if upload.token.present? %>
                <p class="mb-0">
                  <%= link_to "Copy Share Link", shared_file_url(upload.token), class: "btn btn-sm btn-outline-secondary", target: "_blank", rel: "noopener" %>
                </p>
              <% end %>
            </div>

            <div class="card-footer d-flex justify-content-between">
              <%= link_to "View", file_upload_path(upload), class: "btn btn-sm btn-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4">
      No files uploaded yet. Click "Upload New File" to get started.
    </div>
  <% end %>
</div>
