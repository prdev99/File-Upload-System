<%= form_with model: @file_upload, local: true, html: { multipart: true, class: "needs-validation" } do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :file, class: "form-label" %>
    <%= form.file_field :file, class: "form-control", required: true %>
  </div>

  <%= form.submit "Upload File", class: "btn btn-primary" %>
<% end %>
